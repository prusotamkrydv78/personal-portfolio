  <!-- Custom Styles -->
  <style>
    :root {
      --color-bg: #0a0a0f;
      --color-bg-alt: #13131f;
      --color-text: #f8fafc;
      --color-text-alt: #94a3b8;
      --color-primary: #6366f1;
      --color-secondary: #ec4899;
      --color-accent: #8b5cf6;
      --color-success: #10b981;
      --color-warning: #f59e0b;
      --color-error: #ef4444;
      --font-sans: 'Outfit', sans-serif;
      --font-display: 'Space Grotesk', sans-serif;
    }

    html {
      scroll-behavior: smooth;
      scroll-padding-top: 80px;
    }

    body {
      font-family: var(--font-sans);
      background-color: var(--color-bg);
      color: var(--color-text);
      overflow-x: hidden;
    }

    /* Futuristic Preloader */
    .preloader {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: var(--color-bg);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
      transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1), visibility 0.8s cubic-bezier(0.16, 1, 0.3, 1);
      overflow: hidden;
    }

    .preloader.hidden {
      opacity: 0;
      visibility: hidden;
    }

    /* Preloader Backdrop with Radial Gradient */
    .preloader-backdrop {
      position: absolute;
      inset: 0;
      background: radial-gradient(circle at center, rgba(30, 41, 59, 0.5) 0%, rgba(10, 10, 15, 0.95) 100%);
      z-index: -2;
    }

    /* Grid Pattern */
    .preloader-grid {
      position: absolute;
      inset: 0;
      background-image:
        linear-gradient(rgba(99, 102, 241, 0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(99, 102, 241, 0.1) 1px, transparent 1px);
      background-size: 30px 30px;
      opacity: 0.3;
      z-index: -1;
      animation: gridPulse 4s linear infinite;
    }

    @keyframes gridPulse {
      0% { opacity: 0.2; background-size: 30px 30px; }
      50% { opacity: 0.4; background-size: 32px 32px; }
      100% { opacity: 0.2; background-size: 30px 30px; }
    }

    /* Futuristic DNA/Data Strand with Shocking Effects */
    .preloader-dna-container {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100%;
      height: 300px;
      max-width: 800px;
      overflow: hidden;
      z-index: 1;
      perspective: 1000px;
      transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .dna-strand {
      position: relative;
      width: 100%;
      height: 100%;
      transform-style: preserve-3d;
      animation: dnaRotate 20s linear infinite;
      transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @keyframes dnaRotate {
      0% { transform: rotateY(0deg); }
      100% { transform: rotateY(360deg); }
    }

    .dna-helix {
      position: absolute;
      top: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(transparent, rgba(99, 102, 241, 0.2), transparent);
      box-shadow: 0 0 30px rgba(99, 102, 241, 0.3);
      transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .dna-helix-left {
      left: -40%;
      transform: rotateZ(45deg);
      animation: helixPulse 3s ease-in-out infinite alternate;
    }

    .dna-helix-right {
      right: -40%;
      transform: rotateZ(-45deg);
      animation: helixPulse 3s ease-in-out infinite alternate-reverse;
      background: linear-gradient(transparent, rgba(236, 72, 153, 0.2), transparent);
      box-shadow: 0 0 30px rgba(236, 72, 153, 0.3);
    }

    @keyframes helixPulse {
      0% { opacity: 0.5; }
      100% { opacity: 0.8; }
    }

    .dna-data-points {
      position: absolute;
      width: 100%;
      height: 100%;
    }

    @keyframes dataPulse {
      0% { transform: scale(0.8); opacity: 0.5; }
      100% { transform: scale(1.2); opacity: 0.9; }
    }

    /* Stage transitions for DNA */
    .preloader.stage-3 .preloader-dna-container {
      height: 350px;
    }

    .preloader.stage-3 .dna-strand {
      animation-duration: 15s;
    }

    .preloader.stage-3 .dna-helix {
      box-shadow: 0 0 40px rgba(99, 102, 241, 0.4);
    }

    .preloader.stage-3 .dna-helix-right {
      box-shadow: 0 0 40px rgba(236, 72, 153, 0.4);
    }

    .preloader.stage-4 .preloader-dna-container {
      height: 400px;
    }

    .preloader.stage-4 .dna-strand {
      animation-duration: 12s;
    }

    .preloader.stage-4 .dna-helix {
      box-shadow: 0 0 50px rgba(99, 102, 241, 0.5);
    }

    .preloader.stage-4 .dna-helix-right {
      box-shadow: 0 0 50px rgba(236, 72, 153, 0.5);
    }

    .preloader.stage-5 .preloader-dna-container {
      height: 450px;
    }

    .preloader.stage-5 .dna-strand {
      animation-duration: 10s;
    }

    .preloader.stage-5 .dna-helix {
      box-shadow: 0 0 60px rgba(99, 102, 241, 0.6);
    }

    .preloader.stage-5 .dna-helix-right {
      box-shadow: 0 0 60px rgba(236, 72, 153, 0.6);
    }

    .preloader.stage-6 .preloader-dna-container {
      height: 500px;
    }

    .preloader.stage-6 .dna-strand {
      animation-duration: 8s;
    }

    .preloader.stage-6 .dna-helix {
      box-shadow: 0 0 70px rgba(99, 102, 241, 0.7);
    }

    .preloader.stage-6 .dna-helix-right {
      box-shadow: 0 0 70px rgba(236, 72, 153, 0.7);
    }

    .preloader.stage-7 .preloader-dna-container {
      height: 550px;
    }

    .preloader.stage-7 .dna-strand {
      animation-duration: 5s;
    }

    .preloader.stage-7 .dna-helix {
      box-shadow: 0 0 80px rgba(99, 102, 241, 0.8);
    }

    .preloader.stage-7 .dna-helix-right {
      box-shadow: 0 0 80px rgba(236, 72, 153, 0.8);
    }

    /* Holographic Circle with Shocking Effects */
    .preloader-hologram {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 200px;
      height: 200px;
      z-index: 2;
      transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    /* Shocking phase transitions */
    .preloader-hologram.phase-2 {
      filter: hue-rotate(30deg) brightness(1.2);
      transform: translate(-50%, -50%) scale(1.1);
    }

    .preloader-hologram.phase-3 {
      filter: hue-rotate(60deg) brightness(1.4);
      transform: translate(-50%, -50%) scale(1.2);
    }

    .preloader-hologram.phase-4 {
      filter: hue-rotate(90deg) brightness(1.6);
      transform: translate(-50%, -50%) scale(1.3);
    }

    .preloader-hologram.phase-5 {
      filter: hue-rotate(180deg) brightness(1.8);
      transform: translate(-50%, -50%) scale(1.4);
    }

    .preloader-hologram.phase-final {
      filter: hue-rotate(270deg) brightness(2);
      transform: translate(-50%, -50%) scale(1.5);
      animation: finalPulse 0.5s ease-in-out infinite alternate;
    }

    @keyframes finalPulse {
      0% { transform: translate(-50%, -50%) scale(1.5); }
      100% { transform: translate(-50%, -50%) scale(1.6); }
    }

    .hologram-ring {
      position: absolute;
      border-radius: 50%;
      border: 1px solid rgba(99, 102, 241, 0.5);
      box-shadow: 0 0 20px rgba(99, 102, 241, 0.3);
      opacity: 0.8;
      transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .hologram-ring-outer {
      width: 100%;
      height: 100%;
      animation: ringRotate 10s linear infinite;
      border-width: 2px;
    }

    .hologram-ring-middle {
      width: 70%;
      height: 70%;
      top: 15%;
      left: 15%;
      animation: ringRotate 7s linear infinite reverse;
      border-color: rgba(236, 72, 153, 0.5);
      box-shadow: 0 0 20px rgba(236, 72, 153, 0.3);
    }

    .hologram-ring-inner {
      width: 40%;
      height: 40%;
      top: 30%;
      left: 30%;
      animation: ringRotate 5s linear infinite;
      border-color: rgba(139, 92, 246, 0.5);
      box-shadow: 0 0 20px rgba(139, 92, 246, 0.3);
    }

    /* Phase transitions for rings */
    .preloader-hologram.phase-2 .hologram-ring {
      border-width: 2px;
      box-shadow: 0 0 30px var(--color-primary);
    }

    .preloader-hologram.phase-3 .hologram-ring {
      border-width: 3px;
      box-shadow: 0 0 40px var(--color-primary);
    }

    .preloader-hologram.phase-3 .hologram-ring-outer {
      animation-duration: 8s;
    }

    .preloader-hologram.phase-3 .hologram-ring-middle {
      animation-duration: 5s;
    }

    .preloader-hologram.phase-3 .hologram-ring-inner {
      animation-duration: 3s;
    }

    .preloader-hologram.phase-4 .hologram-ring {
      border-width: 4px;
      box-shadow: 0 0 50px var(--color-primary);
    }

    .preloader-hologram.phase-4 .hologram-ring-outer {
      animation-duration: 6s;
    }

    .preloader-hologram.phase-4 .hologram-ring-middle {
      animation-duration: 4s;
    }

    .preloader-hologram.phase-4 .hologram-ring-inner {
      animation-duration: 2s;
    }

    .preloader-hologram.phase-5 .hologram-ring {
      border-width: 5px;
      box-shadow: 0 0 60px var(--color-primary);
    }

    .preloader-hologram.phase-5 .hologram-ring-outer {
      animation-duration: 4s;
    }

    .preloader-hologram.phase-5 .hologram-ring-middle {
      animation-duration: 3s;
    }

    .preloader-hologram.phase-5 .hologram-ring-inner {
      animation-duration: 1.5s;
    }

    .preloader-hologram.phase-final .hologram-ring {
      border-width: 6px;
      box-shadow: 0 0 70px var(--color-primary);
    }

    .preloader-hologram.phase-final .hologram-ring-outer {
      animation-duration: 2s;
    }

    .preloader-hologram.phase-final .hologram-ring-middle {
      animation-duration: 1.5s;
    }

    .preloader-hologram.phase-final .hologram-ring-inner {
      animation-duration: 1s;
    }

    @keyframes ringRotate {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .hologram-scan-line {
      position: absolute;
      width: 100%;
      height: 2px;
      background: linear-gradient(90deg,
        transparent 0%,
        rgba(99, 102, 241, 0.5) 20%,
        rgba(236, 72, 153, 0.8) 50%,
        rgba(99, 102, 241, 0.5) 80%,
        transparent 100%);
      top: 50%;
      transform: translateY(-50%);
      box-shadow: 0 0 10px rgba(99, 102, 241, 0.5);
      animation: scanMove 2s ease-in-out infinite alternate;
      transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @keyframes scanMove {
      0% { transform: translateY(-40px); opacity: 0.3; }
      100% { transform: translateY(40px); opacity: 0.8; }
    }

    /* Phase transitions for scan line */
    .preloader-hologram.phase-2 .hologram-scan-line {
      height: 3px;
      box-shadow: 0 0 15px rgba(99, 102, 241, 0.6);
      animation-duration: 1.8s;
    }

    .preloader-hologram.phase-3 .hologram-scan-line {
      height: 4px;
      box-shadow: 0 0 20px rgba(99, 102, 241, 0.7);
      animation-duration: 1.6s;
    }

    .preloader-hologram.phase-4 .hologram-scan-line {
      height: 5px;
      box-shadow: 0 0 25px rgba(99, 102, 241, 0.8);
      animation-duration: 1.4s;
    }

    .preloader-hologram.phase-5 .hologram-scan-line {
      height: 6px;
      box-shadow: 0 0 30px rgba(99, 102, 241, 0.9);
      animation-duration: 1.2s;
    }

    .preloader-hologram.phase-final .hologram-scan-line {
      height: 8px;
      box-shadow: 0 0 40px rgba(99, 102, 241, 1);
      animation-duration: 0.8s;
      background: linear-gradient(90deg,
        transparent 0%,
        rgba(99, 102, 241, 0.8) 20%,
        rgba(236, 72, 153, 1) 50%,
        rgba(99, 102, 241, 0.8) 80%,
        transparent 100%);
    }

    .hologram-center {
      position: absolute;
      width: 60px;
      height: 60px;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      border-radius: 50%;
      background: rgba(15, 23, 42, 0.6);
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 0 30px rgba(99, 102, 241, 0.5);
      animation: centerPulse 2s ease-in-out infinite alternate;
      transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
      overflow: hidden;
    }

    /* Shocking center effect */
    .hologram-center::before {
      content: '';
      position: absolute;
      inset: 0;
      background: radial-gradient(circle at center, rgba(99, 102, 241, 0.2), transparent 70%);
      opacity: 0.5;
      animation: centerGlow 3s ease-in-out infinite alternate;
    }

    @keyframes centerGlow {
      0% { opacity: 0.3; transform: scale(0.8); }
      100% { opacity: 0.7; transform: scale(1.2); }
    }

    /* Electric shock effect */
    .hologram-center::after {
      content: '';
      position: absolute;
      width: 150%;
      height: 1px;
      background: rgba(99, 102, 241, 0.8);
      top: 50%;
      left: -25%;
      box-shadow: 0 0 10px rgba(99, 102, 241, 1), 0 0 20px rgba(99, 102, 241, 0.5);
      opacity: 0;
      animation: electricShock 3s ease-out infinite;
    }

    @keyframes electricShock {
      0%, 85%, 100% {
        opacity: 0;
        transform: rotate(0deg);
      }
      90%, 92%, 94%, 96% {
        opacity: 1;
        transform: rotate(90deg);
      }
      91%, 93%, 95%, 97% {
        opacity: 1;
        transform: rotate(45deg);
      }
    }

    @keyframes centerPulse {
      0% { box-shadow: 0 0 20px rgba(99, 102, 241, 0.4); }
      100% { box-shadow: 0 0 40px rgba(99, 102, 241, 0.7); }
    }

    .hologram-center-core {
      font-family: var(--font-display);
      font-size: 2rem;
      font-weight: bold;
      color: white;
      text-shadow: 0 0 10px rgba(99, 102, 241, 0.8);
      animation: corePulse 2s ease-in-out infinite alternate;
      position: relative;
      z-index: 2;
    }

    @keyframes corePulse {
      0% { text-shadow: 0 0 10px rgba(99, 102, 241, 0.8); }
      100% { text-shadow: 0 0 20px rgba(99, 102, 241, 1), 0 0 30px rgba(236, 72, 153, 0.8); }
    }

    /* Phase transitions for center */
    .preloader-hologram.phase-2 .hologram-center {
      background: rgba(15, 23, 42, 0.7);
      box-shadow: 0 0 40px rgba(99, 102, 241, 0.6);
    }

    .preloader-hologram.phase-3 .hologram-center {
      background: rgba(15, 23, 42, 0.8);
      box-shadow: 0 0 50px rgba(99, 102, 241, 0.7);
      width: 65px;
      height: 65px;
    }

    .preloader-hologram.phase-4 .hologram-center {
      background: rgba(15, 23, 42, 0.9);
      box-shadow: 0 0 60px rgba(99, 102, 241, 0.8), 0 0 100px rgba(236, 72, 153, 0.4);
      width: 70px;
      height: 70px;
    }

    .preloader-hologram.phase-5 .hologram-center {
      background: rgba(15, 23, 42, 1);
      box-shadow: 0 0 70px rgba(99, 102, 241, 0.9), 0 0 120px rgba(236, 72, 153, 0.5);
      width: 75px;
      height: 75px;
    }

    .preloader-hologram.phase-final .hologram-center {
      background: rgba(30, 41, 59, 1);
      box-shadow: 0 0 80px rgba(99, 102, 241, 1), 0 0 140px rgba(236, 72, 153, 0.6);
      width: 80px;
      height: 80px;
    }

    .preloader-hologram.phase-final .hologram-center-core {
      font-size: 2.5rem;
      animation: finalCorePulse 0.5s ease-in-out infinite alternate;
    }

    @keyframes finalCorePulse {
      0% {
        text-shadow: 0 0 20px rgba(99, 102, 241, 1), 0 0 40px rgba(236, 72, 153, 0.8);
        transform: scale(1);
      }
      100% {
        text-shadow: 0 0 30px rgba(99, 102, 241, 1), 0 0 60px rgba(236, 72, 153, 1);
        transform: scale(1.1);
      }
    }

    /* Stage transitions */
    .preloader.stage-3 .hologram-ring {
      box-shadow: 0 0 30px rgba(99, 102, 241, 0.5);
    }

    .preloader.stage-4 .hologram-ring {
      box-shadow: 0 0 40px rgba(99, 102, 241, 0.6);
    }

    .preloader.stage-5 .hologram-ring {
      box-shadow: 0 0 50px rgba(99, 102, 241, 0.7);
    }

    @keyframes quantumWave {
      0% { transform: translateX(0); }
      100% { transform: translateX(33.33%); }
    }

    /* 3D Cube Container */
    .preloader-3d-container {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      perspective: 800px;
      z-index: 2;
      width: 200px;
      height: 200px;
      pointer-events: none;
    }

    /* 3D Cube */
    .preloader-3d-cube {
      width: 100%;
      height: 100%;
      position: relative;
      transform-style: preserve-3d;
      animation: cubeSpin 10s linear infinite;
    }

    @keyframes cubeSpin {
      0% { transform: rotateX(0deg) rotateY(0deg) rotateZ(0deg); }
      100% { transform: rotateX(360deg) rotateY(720deg) rotateZ(360deg); }
    }

    /* Enhanced Cube Faces with Glow */
    .cube-face {
      position: absolute;
      width: 100%;
      height: 100%;
      background: rgba(15, 23, 42, 0.3);
      border: 1px solid rgba(99, 102, 241, 0.5);
      box-shadow:
        0 0 20px rgba(99, 102, 241, 0.5) inset,
        0 0 30px rgba(99, 102, 241, 0.3);
      backdrop-filter: blur(5px);
      -webkit-backdrop-filter: blur(5px);
      transition: all 0.5s ease;
    }

    /* Stage transitions for cube */
    .preloader.stage-3 .cube-face {
      box-shadow:
        0 0 25px rgba(99, 102, 241, 0.6) inset,
        0 0 40px rgba(99, 102, 241, 0.4);
      border: 1px solid rgba(99, 102, 241, 0.6);
    }

    .preloader.stage-4 .cube-face {
      box-shadow:
        0 0 30px rgba(99, 102, 241, 0.7) inset,
        0 0 50px rgba(99, 102, 241, 0.5);
      border: 1px solid rgba(99, 102, 241, 0.7);
    }

    .preloader.stage-5 .cube-face {
      box-shadow:
        0 0 35px rgba(99, 102, 241, 0.8) inset,
        0 0 60px rgba(99, 102, 241, 0.6);
      border: 1px solid rgba(99, 102, 241, 0.8);
    }

    .cube-face-front {
      transform: translateZ(100px);
      background: linear-gradient(135deg, rgba(99, 102, 241, 0.2), rgba(236, 72, 153, 0.2));
    }

    .cube-face-back {
      transform: translateZ(-100px) rotateY(180deg);
      background: linear-gradient(135deg, rgba(236, 72, 153, 0.2), rgba(99, 102, 241, 0.2));
    }

    .cube-face-right {
      transform: translateX(100px) rotateY(90deg);
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(16, 185, 129, 0.2));
