<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Create particles for various elements
    createParticles();

    // Initialize typing effect for title
    initTypingEffect();

    // Initialize active nav highlight
    initActiveNavHighlight();

    // Mobile menu toggle with advanced animations
    initMobileMenu();

    // Theme toggle with animations
