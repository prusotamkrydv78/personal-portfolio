<%- include('../layouts/layout', { title: title, page: page, body: `
<section class="contact-hero-section min-h-[50vh] flex items-center pt-20 bg-gray-50 dark:bg-gray-800" data-scroll-section>
  <div class="container mx-auto px-4">
    <h1 class="text-4xl md:text-6xl font-bold mb-6 text-center">Contact <span class="text-primary">Me</span></h1>
    <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto text-center">Feel free to reach out to me for any project or collaboration. I'm always open to discussing new ideas.</p>
  </div>
</section>

<section class="contact-content-section section" data-scroll-section>
  <div class="container">
    <div class="flex flex-col md:flex-row gap-12">
      <div class="md:w-1/2">
        <h2 class="text-3xl font-bold mb-8">Get In Touch</h2>
        <p class="text-gray-600 dark:text-gray-400 mb-8">I'm interested in freelance opportunities â€“ especially ambitious or large projects. However, if you have other requests or questions, don't hesitate to contact me using the form.</p>
        
        <div class="space-y-8">
          <div class="flex items-center">
            <div class="w-12 h-12 rounded-full bg-primary bg-opacity-10 flex items-center justify-center mr-4">
              <i class="fas fa-map-marker-alt text-primary"></i>
            </div>
            <div>
              <h3 class="text-lg font-semibold">Location</h3>
              <p class="text-gray-600 dark:text-gray-400">Nepal</p>
            </div>
          </div>
          
          <div class="flex items-center">
            <div class="w-12 h-12 rounded-full bg-primary bg-opacity-10 flex items-center justify-center mr-4">
              <i class="fas fa-envelope text-primary"></i>
            </div>
            <div>
              <h3 class="text-lg font-semibold">Email</h3>
              <a href="mailto:your-email@example.com" class="text-gray-600 dark:text-gray-400 hover:text-primary">your-email@example.com</a>
            </div>
          </div>
          
          <div class="flex items-center">
            <div class="w-12 h-12 rounded-full bg-primary bg-opacity-10 flex items-center justify-center mr-4">
              <i class="fab fa-github text-primary"></i>
            </div>
            <div>
              <h3 class="text-lg font-semibold">GitHub</h3>
              <a href="https://github.com/prusotamydv" target="_blank" class="text-gray-600 dark:text-gray-400 hover:text-primary">github.com/prusotamydv</a>
            </div>
          </div>
          
          <div class="flex items-center">
            <div class="w-12 h-12 rounded-full bg-primary bg-opacity-10 flex items-center justify-center mr-4">
              <i class="fab fa-linkedin text-primary"></i>
            </div>
            <div>
              <h3 class="text-lg font-semibold">LinkedIn</h3>
              <a href="https://linkedin.com/in/prusotam" target="_blank" class="text-gray-600 dark:text-gray-400 hover:text-primary">linkedin.com/in/prusotam</a>
            </div>
          </div>
        </div>
        
        <div class="mt-12">
          <h3 class="text-2xl font-bold mb-4">Follow Me</h3>
          <div class="flex space-x-4">
            <a href="https://github.com/prusotamydv" target="_blank" class="w-10 h-10 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center text-gray-600 dark:text-gray-400 hover:bg-primary hover:text-white transition-colors">
              <i class="fab fa-github"></i>
            </a>
            <a href="https://linkedin.com/in/prusotam" target="_blank" class="w-10 h-10 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center text-gray-600 dark:text-gray-400 hover:bg-primary hover:text-white transition-colors">
              <i class="fab fa-linkedin-in"></i>
            </a>
            <a href="#" target="_blank" class="w-10 h-10 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center text-gray-600 dark:text-gray-400 hover:bg-primary hover:text-white transition-colors">
              <i class="fab fa-twitter"></i>
            </a>
            <a href="#" target="_blank" class="w-10 h-10 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center text-gray-600 dark:text-gray-400 hover:bg-primary hover:text-white transition-colors">
              <i class="fab fa-instagram"></i>
            </a>
          </div>
        </div>
      </div>
      
      <div class="md:w-1/2">
        <% if (typeof success !== 'undefined') { %>
          <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6" role="alert">
            <strong class="font-bold">Success!</strong>
            <span class="block sm:inline"><%= success %></span>
          </div>
        <% } %>
        
        <form action="/contact" method="POST" class="card p-8">
          <div class="mb-6">
            <label for="name" class="block text-gray-700 dark:text-gray-300 mb-2">Name</label>
            <input type="text" id="name" name="name" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary dark:bg-gray-700 dark:border-gray-600">
          </div>
          
          <div class="mb-6">
            <label for="email" class="block text-gray-700 dark:text-gray-300 mb-2">Email</label>
            <input type="email" id="email" name="email" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary dark:bg-gray-700 dark:border-gray-600">
          </div>
          
          <div class="mb-6">
            <label for="subject" class="block text-gray-700 dark:text-gray-300 mb-2">Subject</label>
            <input type="text" id="subject" name="subject" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary dark:bg-gray-700 dark:border-gray-600">
          </div>
          
          <div class="mb-6">
            <label for="message" class="block text-gray-700 dark:text-gray-300 mb-2">Message</label>
            <textarea id="message" name="message" rows="5" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary dark:bg-gray-700 dark:border-gray-600"></textarea>
          </div>
          
          <button type="submit" class="btn btn-primary w-full">Send Message</button>
        </form>
      </div>
    </div>
  </div>
</section>

<section class="map-section py-16" data-scroll-section>
  <div class="container mx-auto px-4">
    <div class="rounded-lg overflow-hidden shadow-lg">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3532.2585023738!2d85.31080807607!3d27.709898976178985!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39eb19c1b0b6b4ff%3A0x3c9c2e19d16c1e91!2sKathmandu%2C%20Nepal!5e0!3m2!1sen!2sus!4v1649234567890!5m2!1sen!2sus" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </div>
</section>
` }) %>
