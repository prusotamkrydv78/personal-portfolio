  <!-- Custom Scripts -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Create DNA data points
      const dnaContainer = document.getElementById('dna-data-points');
      const dataPointCount = 80; // Number of data points in the DNA strand

      for (let i = 0; i < dataPointCount; i++) {
        const dataPoint = document.createElement('div');
        dataPoint.classList.add('dna-data-point');

        // Position along the DNA strand
        const posY = (i / dataPointCount) * 100;
        const posX = 50 + Math.sin(i * 0.2) * 40;

        // Size based on position
        const size = Math.random() * 2 + 2;

        // Random opacity
        const opacity = Math.random() * 0.5 + 0.5;

        // Animation delay based on position
        const delay = (i / dataPointCount) * 2;

        // Apply styles
        const colorRandom = Math.random();
        let dataColor;

        if (colorRandom < 0.33) {
          dataColor = '#6366f1'; // Primary
        } else if (colorRandom < 0.66) {
          dataColor = '#ec4899'; // Secondary
        } else {
          dataColor = '#8b5cf6'; // Accent
        }

        dataPoint.style.cssText = `
          position: absolute;
          left: ${posX}%;
          top: ${posY}%;
          width: ${size}px;
          height: ${size}px;
          border-radius: 50%;
          opacity: ${opacity};
          background-color: ${dataColor};
          box-shadow: 0 0 ${size * 2}px ${dataColor};
          animation: dataPulse 2s ease-in-out infinite alternate;
          animation-delay: ${delay}s;
          z-index: 3;
        `;

        dnaContainer.appendChild(dataPoint);
      }

      // Preloader timing with staged animations
      // Stage 1: Initial loading (0-3s)
      setTimeout(() => {
        document.querySelector('.loader-progress-bar').style.animationDuration = '3s';
        document.querySelector('.loader-text-label').textContent = 'Initializing';
      }, 0);

      // Stage 2: System check (3-5s)
      setTimeout(() => {
        document.querySelector('.loader-text-label').textContent = 'System Check';
        document.querySelector('.preloader').classList.add('stage-2');

      }, 3000);

      // Stage 3: Neural mapping (5-8s)
      setTimeout(() => {
        document.querySelector('.loader-text-label').textContent = 'Neural Mapping';
        document.querySelector('.preloader').classList.add('stage-3');
        document.querySelector('.preloader-hologram').classList.add('phase-2');
      }, 5000);

      // Stage 4: Quantum calibration (8-12s)
      setTimeout(() => {
        document.querySelector('.loader-text-label').textContent = 'Quantum Calibration';
        document.querySelector('.preloader').classList.add('stage-4');
        document.querySelector('.preloader-hologram').classList.add('phase-3');
      }, 8000);

      // Stage 5: Dimensional sync (12-16s)
      setTimeout(() => {
        document.querySelector('.loader-text-label').textContent = 'Dimensional Sync';
        document.querySelector('.preloader').classList.add('stage-5');
        document.querySelector('.preloader-hologram').classList.add('phase-4');
      }, 12000);

      // Stage 6: Reality anchoring (16-18s)
      setTimeout(() => {
        document.querySelector('.loader-text-label').textContent = 'Reality Anchoring';
        document.querySelector('.preloader').classList.add('stage-6');
        document.querySelector('.preloader-hologram').classList.add('phase-5');
      }, 16000);

      // Stage 7: Final initialization (18-20s)
      setTimeout(() => {
        document.querySelector('.loader-text-label').textContent = 'Initialization Complete';
        document.querySelector('.preloader').classList.add('stage-7');
        document.querySelector('.preloader-hologram').classList.add('phase-final');
      }, 18000);

      // Complete and hide preloader (20s)
      setTimeout(() => {
        document.querySelector('.preloader').classList.add('hidden');
      }, 20000);

      // Custom cursor
      const cursor = document.querySelector('.cursor');

      document.addEventListener('mousemove', (e) => {
        cursor.style.left = e.clientX + 'px';
        cursor.style.top = e.clientY + 'px';
      });

      document.addEventListener('mousedown', () => {
        cursor.classList.add('active');
      });

      document.addEventListener('mouseup', () => {
        cursor.classList.remove('active');
      });

      // Add hover effect to all links and buttons
      const interactiveElements = document.querySelectorAll('a, button, .interactive');
      interactiveElements.forEach(element => {
        element.addEventListener('mouseenter', () => {
          cursor.classList.add('active');
        });

        element.addEventListener('mouseleave', () => {
          cursor.classList.remove('active');
        });
      });

      // Reveal animations on scroll
      const revealElements = document.querySelectorAll('.reveal');

      function checkReveal() {
        revealElements.forEach(element => {
          const elementTop = element.getBoundingClientRect().top;
          const windowHeight = window.innerHeight;

          if (elementTop < windowHeight - 100) {
            element.classList.add('active');
          }
        });
      }

      window.addEventListener('scroll', checkReveal);
      checkReveal(); // Check on page load
    });
  </script>

