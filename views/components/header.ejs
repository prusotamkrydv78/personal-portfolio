    // Smooth scrolling for navigation links
    initSmoothScrolling();

    // Mouse follow effect for logo
    initMouseFollowEffect();

    // Create particles for various elements
    function createParticles() {
      // Logo particles
      createElementParticles('cyber-logo-particles', 15, 20, 15);

      // Mobile menu particles
      createElementParticles('cyber-mobile-menu-particles', 30, 40, 30);

      // Header particles
      createElementParticles('header-particles', 50, 100, 50);
    }

    // Generic function to create particles for any element
    function createElementParticles(elementId, count, maxDistance, maxSize) {
      const container = document.getElementById(elementId);
      if (!container) return;

      for (let i = 0; i < count; i++) {
        const particle = document.createElement('div');

        // Random position
        const x = Math.random() * 100;
        const y = Math.random() * 100;

        // Random size
        const size = Math.random() * maxSize / 10 + 1;

        // Random color
        let color;
        const colorRand = Math.random();
        if (colorRand < 0.33) {
          color = 'var(--color-primary)';
        } else if (colorRand < 0.66) {
          color = 'var(--color-secondary)';
        } else {
          color = 'var(--color-accent)';
        }

        // Random opacity
        const opacity = Math.random() * 0.5 + 0.1;

        // Apply styles
        particle.style.cssText = `
          position: absolute;
          width: ${size}px;
          height: ${size}px;
          background-color: ${color};
          border-radius: 50%;
          left: ${x}%;
          top: ${y}%;
          opacity: ${opacity};
          filter: blur(${size / 2}px);
          pointer-events: none;
        `;

        container.appendChild(particle);

        // Animate with GSAP
        gsap.to(particle, {
          x: `+=${Math.random() * maxDistance - maxDistance/2}`,
          y: `+=${Math.random() * maxDistance - maxDistance/2}`,
          duration: 3 + Math.random() * 7,
          repeat: -1,
          yoyo: true,
          ease: 'sine.inOut',
          delay: Math.random() * 2
        });

        // Pulse opacity
        gsap.to(particle, {
          opacity: opacity / 2,
          duration: 2 + Math.random() * 3,
          repeat: -1,
          yoyo: true,
          ease: 'sine.inOut',
          delay: Math.random() * 2
        });
      }
    }

    // Typing effect for the title
    function initTypingEffect() {
      const titleElement = document.getElementById('cyber-title');
      if (!titleElement) return;

      const titles = ['Web Developer', 'UI/UX Designer', 'Frontend Engineer', 'Creative Coder'];
      let currentTitleIndex = 0;
      let currentCharIndex = 0;
      let isDeleting = false;
      let typingSpeed = 100;

      function typeTitle() {
        const currentTitle = titles[currentTitleIndex];

        if (isDeleting) {
          // Deleting text
          titleElement.textContent = currentTitle.substring(0, currentCharIndex - 1);
          currentCharIndex--;
          typingSpeed = 50;
        } else {
          // Typing text
          titleElement.textContent = currentTitle.substring(0, currentCharIndex + 1);
          currentCharIndex++;
          typingSpeed = 100;
        }

        // Check if completed typing current title
        if (!isDeleting && currentCharIndex === currentTitle.length) {
          // Pause at the end of typing
          isDeleting = true;
          typingSpeed = 1500;
        } else if (isDeleting && currentCharIndex === 0) {
          // Move to next title
          isDeleting = false;
          currentTitleIndex = (currentTitleIndex + 1) % titles.length;
        }

        setTimeout(typeTitle, typingSpeed);
      }

      // Start the typing effect
      setTimeout(typeTitle, 1000);
    }

    // Initialize active nav highlight
    function initActiveNavHighlight() {
      const navLinks = document.querySelectorAll('.cyber-nav-link');
      const highlight = document.getElementById('cyber-nav-highlight');

      if (!highlight || navLinks.length === 0) return;

      // Function to position the highlight
      function positionHighlight(link) {
        const linkRect = link.getBoundingClientRect();
        const navRect = link.parentElement.getBoundingClientRect();

        gsap.to(highlight, {
          x: linkRect.left - navRect.left,
          width: linkRect.width,
          duration: 0.3,
          ease: 'power2.out'
        });
      }

      // Set initial position
      const activeLink = document.querySelector('.cyber-nav-link.active') || navLinks[0];
      positionHighlight(activeLink);

      // Update on hover
      navLinks.forEach(link => {
        link.addEventListener('mouseenter', () => {
          positionHighlight(link);
        });
      });

      // Return to active link on mouse leave
      document.querySelector('.cyber-nav-links').addEventListener('mouseleave', () => {
        const activeLink = document.querySelector('.cyber-nav-link.active') || navLinks[0];
        positionHighlight(activeLink);
      });
    }

    // Simple Mobile Menu Initialization
    function initMobileMenu() {
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      if (!mobileMenuButton || !mobileMenu) {
        console.warn('Mobile menu elements not found');
        return;
      }

      // Pre-cache DOM elements for better performance
      const mobileLinks = document.querySelectorAll('.mobile-menu-link');
      const mobileLogo = document.querySelector('.mobile-menu-logo');
      const mobileSocial = document.querySelector('.mobile-menu-social');

      // Only show the button on appropriate screen sizes
      function updateMobileButtonVisibility() {
        if (window.innerWidth >= 1024) { // lg breakpoint (1024px)
          mobileMenuButton.style.display = 'none';
        } else {
          mobileMenuButton.style.display = 'flex';
        }
      }

      // Initial check
      updateMobileButtonVisibility();

      // Update on resize
      window.addEventListener('resize', updateMobileButtonVisibility);

      // Simple animation helper
      function animateElement(element, properties, duration = 0.3) {
        if (!element) return;

        try {
          gsap.to(element, {
            ...properties,
            duration: duration,
            ease: 'power2.out'
          });
        } catch (error) {
          console.error('Animation error:', error);
          // Apply basic CSS fallback
          if (properties.opacity !== undefined) element.style.opacity = properties.opacity;
          if (properties.y !== undefined) element.style.transform = `translateY(${properties.y}px)`;
        }
      }

      // Function to close the mobile menu
      function closeMobileMenu() {
        mobileMenuButton.classList.remove('active');
        mobileMenu.classList.remove('menu-open');
        mobileMenu.classList.add('menu-closing');

        // Wait for animation to complete before hiding
        setTimeout(() => {
          mobileMenu.classList.add('hidden');
          mobileMenu.classList.remove('flex', 'menu-closing');
          document.body.style.overflow = ''; // Re-enable scrolling

          // Clear particles
          const particlesContainer = document.querySelector('.mobile-menu-particles');
          if (particlesContainer) {
            particlesContainer.innerHTML = '';
          }
        }, 500); // Match this with the CSS animation duration
      }

      // Toggle mobile menu on button click
      mobileMenuButton.addEventListener('click', () => {
        mobileMenuButton.classList.toggle('active');

        if (mobileMenu.classList.contains('hidden')) {
          // Open menu with CSS animations
          mobileMenu.classList.remove('hidden');
          mobileMenu.classList.add('flex', 'menu-open');

          // Add static particles (no JavaScript animation)
          const particlesContainer = document.querySelector('.mobile-menu-particles');
          if (particlesContainer) {
            particlesContainer.innerHTML = '';

            // Create a few static particles with CSS animations
            for (let i = 0; i < 10; i++) {
              const particle = document.createElement('div');
              particle.className = 'mobile-menu-particle';

              // Random position
              const x = Math.random() * 100;
              const y = Math.random() * 100;

              // Random animation delay
              const delay = Math.random() * 5;

              particle.style.cssText = `
                left: ${x}%;
                top: ${y}%;
                animation-delay: ${delay}s;
              `;

              particlesContainer.appendChild(particle);
            }
          }

          // Prevent scrolling
          document.body.style.overflow = 'hidden';
        } else {
          closeMobileMenu();
        }
      });

      // Add click event listeners to all mobile menu links
      function setupMobileMenuLinks() {
        const mobileMenuLinks = document.querySelectorAll('.mobile-menu-link');
        mobileMenuLinks.forEach(link => {
          // Remove any existing event listeners (to prevent duplicates)
          const newLink = link.cloneNode(true);
          link.parentNode.replaceChild(newLink, link);

          newLink.addEventListener('click', (e) => {
            // Get the target section ID
            const targetId = newLink.getAttribute('href');
            const targetSection = document.querySelector(targetId);

            if (targetSection) {
              // Prevent default anchor behavior
              e.preventDefault();

              // Close the mobile menu
              closeMobileMenu();

              // Scroll to the section after a short delay to allow menu to close
              setTimeout(() => {
                targetSection.scrollIntoView({ behavior: 'smooth' });

                // Update URL hash without scrolling
                history.pushState(null, null, targetId);
              }, 300);
            }
          });
        });
      }

      // Setup mobile menu links
      setupMobileMenuLinks();
    }

    // Theme toggle initialization
    function initThemeToggle() {
      const themeToggle = document.getElementById('theme-toggle');
      const htmlElement = document.documentElement;

      if (!themeToggle) return;

      // Check for saved theme preference or use system preference
      const savedTheme = localStorage.getItem('theme');
      const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

      if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
        htmlElement.classList.add('dark');
      }

      themeToggle.addEventListener('click', () => {
        // Add glitch effect to the whole page during transition
        const glitchOverlay = document.createElement('div');
        glitchOverlay.className = 'fixed inset-0 z-[9999] pointer-events-none';
        glitchOverlay.style.cssText = `
          background: rgba(99, 102, 241, 0.05);
          mix-blend-mode: overlay;
          animation: fullGlitch 0.5s ease;
        `;
        document.body.appendChild(glitchOverlay);

        // Toggle theme with animation
        if (htmlElement.classList.contains('dark')) {
          htmlElement.classList.remove('dark');
          localStorage.setItem('theme', 'light');
        } else {
          htmlElement.classList.add('dark');
          localStorage.setItem('theme', 'dark');
        }

        // Remove glitch overlay after animation
        setTimeout(() => {
          document.body.removeChild(glitchOverlay);
        }, 500);
      });

      // Add glitch animation to the stylesheet
      const style = document.createElement('style');
      style.textContent = `
        @keyframes fullGlitch {
          0%, 100% { transform: translate(0); opacity: 0; }
          20% { transform: translate(-5px, 5px); opacity: 0.5; }
          40% { transform: translate(-5px, -5px); opacity: 0.5; }
          60% { transform: translate(5px, 5px); opacity: 0.5; }
          80% { transform: translate(5px, -5px); opacity: 0.5; }
        }
      `;
      document.head.appendChild(style);
    }

    // Header scroll effects
    function initScrollEffects() {
      const header = document.querySelector('header');
      let lastScrollY = window.scrollY;

      if (!header) return;

      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
          header.classList.add('scrolled');

          // Hide header when scrolling down, show when scrolling up
          if (window.scrollY > lastScrollY) {
            gsap.to(header, { y: '-100%', duration: 0.4, ease: 'power3.out' });
          } else {
            gsap.to(header, { y: '0%', duration: 0.4, ease: 'power3.out' });
          }
        } else {
          header.classList.remove('scrolled');
          gsap.to(header, { y: '0%', duration: 0.4, ease: 'power3.out' });
        }

        lastScrollY = window.scrollY;

        // Active section highlighting
        highlightActiveSection();
      });

      // Highlight active section in navigation
      function highlightActiveSection() {
        const sections = document.querySelectorAll('section[id]');
        const navLinks = document.querySelectorAll('.cyber-nav-link, .cyber-mobile-menu-link');
        const highlight = document.getElementById('cyber-nav-highlight');

        let currentSection = '';

        sections.forEach(section => {
          const sectionTop = section.offsetTop - 100;
          const sectionHeight = section.offsetHeight;

          if (window.scrollY >= sectionTop && window.scrollY < sectionTop + sectionHeight) {
            currentSection = section.getAttribute('id');
          }
        });

        navLinks.forEach(link => {
          link.classList.remove('active');
          if (link.getAttribute('data-section') === currentSection) {
            link.classList.add('active');

            // Update highlight position for desktop nav
            if (highlight && link.classList.contains('cyber-nav-link')) {
              const linkRect = link.getBoundingClientRect();
              const navRect = link.parentElement.getBoundingClientRect();

              gsap.to(highlight, {
                x: linkRect.left - navRect.left,
                width: linkRect.width,
                duration: 0.3,
                ease: 'power2.out'
              });
            }
          }
        });
      }

      // Initialize active section highlighting
      highlightActiveSection();
    }

