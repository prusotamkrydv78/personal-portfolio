  /* Cyberpunk Logo Styles */
  .cyber-logo {
    display: flex;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  /* Logo Container */
  .cyber-logo-container {
    position: relative;
    width: 50px;
    height: 50px;
    margin-right: 15px;
  }

  /* Holographic Emblem */
  .cyber-logo-emblem {
    position: relative;
    width: 100%;
    height: 100%;
  }

  /* Rotating Rings */
  .cyber-logo-ring {
    position: absolute;
    border-radius: 50%;
    border: 1px solid rgba(99, 102, 241, 0.3);
    box-shadow: 0 0 10px rgba(99, 102, 241, 0.3);
  }

  .cyber-logo-ring-1 {
    top: -5px;
    left: -5px;
    right: -5px;
    bottom: -5px;
    border: 1px solid rgba(99, 102, 241, 0.3);
    animation: ringRotate1 10s linear infinite;
