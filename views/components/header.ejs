<style>
  /* Cyberpunk Futuristic Header Styles */

  /* Header Background Effects */
  .header-bg-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(125deg,
      rgba(10, 10, 20, 0.95) 0%,
      rgba(30, 30, 50, 0.85) 40%,
      rgba(15, 15, 35, 0.95) 100%);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(99, 102, 241, 0.2);
    opacity: 0.9;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    animation: gradientShift 15s ease infinite alternate;
  }

  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  /* Grid Lines Animation */
  .header-grid-container {
    position: absolute;
    inset: 0;
    overflow: hidden;
    opacity: 0.15;
  }

  .header-grid-horizontal {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      to bottom,
      transparent,
      transparent 19px,
      rgba(99, 102, 241, 0.5) 19px,
      rgba(99, 102, 241, 0.5) 20px
    );
    animation: gridMoveVertical 60s linear infinite;
  }

  .header-grid-vertical {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      to right,
      transparent,
      transparent 19px,
      rgba(236, 72, 153, 0.5) 19px,
      rgba(236, 72, 153, 0.5) 20px
    );
    animation: gridMoveHorizontal 60s linear infinite;
  }

  @keyframes gridMoveVertical {
    from { transform: translateY(0); }
    to { transform: translateY(20px); }
  }

  @keyframes gridMoveHorizontal {
    from { transform: translateX(0); }
    to { transform: translateX(20px); }
  }

  /* Animated Particles */
  .header-particles {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  /* Glowing Border */
  .header-border-glow {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg,
      transparent,
      rgba(99, 102, 241, 0.7),
      rgba(236, 72, 153, 0.7),
      rgba(139, 92, 246, 0.7),
      transparent);
    filter: blur(1px);
    animation: borderPulse 4s ease-in-out infinite alternate;
  }

  @keyframes borderPulse {
    0% { opacity: 0.3; filter: blur(1px); }
    100% { opacity: 0.7; filter: blur(2px); }
  }

  /* Circuit Pattern */
  .header-circuit-pattern {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M10,10 L30,10 L30,30 L50,30 L50,50 L70,50 L70,70 L90,70' stroke='rgba(99, 102, 241, 0.15)' fill='none' stroke-width='1'/%3E%3Cpath d='M90,10 L70,10 L70,30 L50,30 L50,50 L30,50 L30,70 L10,70' stroke='rgba(236, 72, 153, 0.15)' fill='none' stroke-width='1'/%3E%3C/svg%3E");
    background-size: 100px 100px;
    opacity: 0.3;
    mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1), rgba(0, 0, 0, 0));
  }

  /* Noise Texture */
  .header-noise {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    opacity: 0.03;
    mix-blend-mode: overlay;
